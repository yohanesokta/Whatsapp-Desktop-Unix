{
  "name": "WhatsApp_Desktop_Unix",
  "version": "1.0.1",
  "description": "WhatsApp Desktop Client Unix",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:dir": "electron-builder --dir"
  },
  "build": {
    "appId": "com.yohanes.whatsapp",
    "productName": "WhatsApp Desktop Unix",
    "copyright": "Copyright Â© 2025 yohanesoktanio",
    "files": [
      "main.js",
      "preload.js",
      "static/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icon.png",
      "category": "Utility",
      "maintainer": "Yohanes Oktanio <yohanesoktayt72@gmail.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "Yohanes Oktanio <yohanesoktayt72@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-context-menu": "^4.1.1",
    "electron-squirrel-startup": "^1.0.1"
  }
}
